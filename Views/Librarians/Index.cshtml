@model IEnumerable<LibraryManagementSystem.Models.Librarian>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <ul><a asp-action="Login">Login</a></ul>
    <ul><a asp-action="Register">Register for Librarian</a></ul>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateJoined)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateJoined)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LibrarianId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LibrarianId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LibrarianId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
